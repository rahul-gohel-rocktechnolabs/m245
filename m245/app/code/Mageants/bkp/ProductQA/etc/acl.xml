        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Mageants_ProductQA::mageants_productqa" title="Product Question/Answer" sortOrder="50"></resource>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Catalog::catalog">
					<resource id="Mageants_ProductQA::productqa" title="Product Question / Answer" translate="title" sortOrder="10">
						<resource id="Mageants_ProductQA::productquestion" title="Product Question" translate="title" sortOrder="23">					
								<resource id="Mageants_ProductQA::productquestion_grid" title="Product Question Grid" sortOrder="20" />
