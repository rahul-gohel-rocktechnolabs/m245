								<resource id="Mageants_ProductQA::productanswer_delete" title="Delete Product Answer" sortOrder="20" />
								<resource id="Mageants_ProductQA::productanswer_massdel" title="Mass Delete Product Answer" sortOrder="20" />
								<resource id="Mageants_ProductQA::productanswer_massapprove" title="Mass Approve Product Answer" sortOrder="20" />
								<resource id="Mageants_ProductQA::productanswer_massreject" title="Mass Reject Product Question" sortOrder="20" />
						</resource>	
					</resource>
				</resource>
			</resource>
        </resources>
