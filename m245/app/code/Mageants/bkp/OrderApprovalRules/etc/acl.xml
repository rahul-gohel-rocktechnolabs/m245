<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Mageants_OrderApprovalRules::config_mageants_orderapprovalrules" title="Order Approval Rules Section" sortOrder="50">
                            </resource>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Sales::sales">
                    <resource id="Mageants_OrderApprovalRules::order_approval_rules" title="Order Approval Rules">
                        <resource id="Mageants_OrderApprovalRules::pending_orders" title="Pending Orders" translate="title" sortOrder="10">
                            <resource id="Mageants_OrderApprovalRules::order_pending" title="Pending Orders" translate="title" sortOrder="20">
                            </resource> 
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::marketing">
                    <resource id="Magento_CatalogRule::promo">
                        <resource id="Mageants_OrderApprovalRules::order_approval" title="Order Approval Rules">
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
