<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales">
                    <resource id="Mageants_OrderArchive::archive" title="Archive" translate="title" sortOrder="20">
                        <resource id="Mageants_OrderArchive::orders"  title="Orders" translate="title" sortOrder="10">
                            <resource id="Mageants_OrderArchive::add" title="Move to Archive" translate="title" />
                            <resource id="Mageants_OrderArchive::remove" title="Restore from Archive" translate="title" />
                        </resource>
                        <resource id="Mageants_OrderArchive::invoices" title="Invoices" translate="title" sortOrder="20" />
                        <resource id="Mageants_OrderArchive::shipments" title="Shipments" translate="title" sortOrder="30" />
                        <resource id="Mageants_OrderArchive::creditmemos" title="Credit Memos" translate="title" sortOrder="40" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
